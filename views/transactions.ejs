<h1>Transactions page</h1>
<p>Your token:<span id="token"><%=token%></span></p>

<h2>Create Stripe Payments</h2>

<form>
    
<fieldset>
    <legend>Pricing</legend>
    
    <div class="form-group">
        <label for="amount" class="control-label">Amount:</label>
        <input type="number" name="amount" id="amount" class="form-control">
    </div>
    
    <div class="form-group">
        <label for="currency" class="control-label">Currency: </label>
        <input type="text" name="currency" id="currency" class="form-control">
    </div>
</fieldset>

<fieldset>
    <legend>Payment method</legend>
    
    <% if (source) { %>
    
    <div class="radio">
        <label>
            <input type="radio" name="paymentsource" checked="checked" value="<%= source.id %>">
            <span> <%= source.brand %> ending in <%= source.last4 %></span>
        </label>
    </div>
    
    <div class="radio">
        <label>
            <input type="radio" name="paymentsource" value="">
            <span> Use new card </span>
        </label> 
    </div>
    
     <% } %>
    
    <div class="form-group">
        <label for="cardnumber" class="control-label">Card number </label>
        <input type="text" name="customerid" id="cardnumber" class="card-number form-control">
    </div>
    <div class="form-group">
        <label for="cvc" class="control-label">CVC: </label>
        <input type="number" name="cvc" id="cvc" class="card-cvc form-control">
    </div>
    <div class="form-group">
        <label for="card-expiry-month" class="control-label">Expired Month: </label>
        <input type="number" name="card-expiry-month" id="card-expiry-month" class="card-expiry-month form-control">
    </div>
    <div class="form-group">
        <label for="card-expiry-year" class="control-label">Expired Year: </label>
        <input type="number" name="card-expiry-year" id="card-expiry-year" class="card-expiry-year form-control">
    </div>
    <p class="payment-errors"></p>
</fieldset>

<input type="button" class="submittransaction btn btn-primary btn-lg" id="submittransaction" value="Submit">

</form>